Algoritmo "CalculaAreaTriângulo"

Var
altura:real
base:real
area:real
Inicio
 escreval("Digite o valor da altura do triângulo:")
 leia(altura)
 escreval("Digite o valor da base do triâgulo:")
 leia(base)
 
 area <- (altura * base)/2
 
 escreval("Com altura = ", altura, "m e base = ", base, "m A área do triângulo é: ",area, "m²")

   
   
Fimalgoritmo